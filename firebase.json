{
  "hosting": [
    {
      "target": "dev",
      "site": "mytrendongstories-dev",
      "public": "dist/enlink/browser",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "ssr"
        }
      ]
    },
    {
      "target": "test",
      "site": "mytrendongstories-test",
      "public": "dist/enlink/browser",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "ssr"
        }
      ]
    },
    {
      "target": "prod",
      "site": "mytrendongstories",
      "public": "dist/enlink/browser",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "ssr"
        }
      ],
      "redirects" : [
        {
          "source": "/media/**",
          "destination": "https://abc2020new.com/media/**",
          "type": 302
        }
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
